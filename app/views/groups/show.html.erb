<div class = "nav-top-two">
    <a href="/"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
    <div id = "margin">
      <p id= "no-padding">BUDGETS</p>
    </div>
</div>
<ul class = "group-ul">
  <li class = "group-list">
    <div class="list-items">
        <div class = "group-holder">
              <img src = <%= @group.icon %> width = 40px height = 40px>
              <h5 class = "title"> <%= @group.name %> </h5>
        </div>
    </div>
    <div class = "total-amount-holder title">
      <p class = "currency">Total Amount:</p>
      <%= number_to_currency(@group.budgets.sum(&:amount)) %>
    </div>
  </li>
</ul>

<ul class = "budget-ul">
  <% @group_budgets.each do |budget| %>
    <li class = "group-list">
      <div class = 'flex title'>
        <div class = "budget-names">
          <%= budget.name %>
        </div>
          <%= number_to_currency(budget.amount) %>
      </div>
        <small >
        <%= budget.created_at.strftime("%d-%b-%Y %H:%M:%S") %>
        </small>
    </li>
  <% end %>
</ul>
<div class="green-field">
    <%= button_to "ADD BUDGETS", new_group_budget_path(group_id: @group.id), class: "green-button", method: "get" %>
</div>

