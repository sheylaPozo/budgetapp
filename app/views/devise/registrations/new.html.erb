<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <header class="header">
    <nav class="nav">
      <%= link_to root_path, class: "back__link" do %>
        <i class='bx bx-arrow-back'></i>
      <% end %>
      <span>REGISTER</span>
      <%= f.submit "Next", class: "action" %>
    </nav>
  </header>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="fields">
    <div class="field">
      <%= f.text_field :name,  { autofocus: true, autocomplete: "name", class: "input", placeholder: "Full name", required: true } %>
    </div>
    <div class="field">
      <%= f.email_field :email,  { autofocus: true, autocomplete: "email", class: "input", placeholder: "Email" , required: true} %>
    </div>
    <div class="field">
      <%= f.password_field :password, { autocomplete: "new-password", class: "input", placeholder: "Password" , required: true} %>
    </div>
    <div class="field">
      <%= f.password_field :password_confirmation, { autocomplete: "new-password", class: "input", placeholder: "Confirm Password" , required: true} %>
    </div>
  </div>
<% end %>
